/**
 * Implements hook_install().
 *
 * In Drupal 7, there is no need to install schema using this hook, the schema
 * is already installed before this hook is called.
 *
 * We will create a default entry in the database.
 *
 * @see hook_install()
 * @ingroup powell_res
 */
function powell_res_rules_install() {
  // Outside of the .install file we would use drupal_write_record() to
  // populate the database, but it cannot be used here, so we'll use
  // db_insert().

  // Add a default entry.
  $fields = array(
    'user_group'    => 'Graduate',
    'cls_lim' => 240,
    'gsr_lim'     => 240,
    'pod_lim'     => 240,
    'cls_adv' => 168,
    'gsr_adv'     => 168,
    'pod_adv'     => 168,
    'multi_res'     => "no",
    'time_per'     => 3,
    'time_unit'     => 168,
    'group_verify'     => "yes",
  );
  db_insert('powell_res_rules')
    ->fields($fields)
    ->execute();

  // Add another entry.
  $fields = array(
    'user_group'    => 'Undergraduate',
    'cls_lim' => 120,
    'gsr_lim' => 120,
    'pod_lim' => 120,
    'cls_adv' => 24,
    'gsr_adv'     => 24,
    'pod_adv'     => 24,
    'multi_res'     => "no",
    'time_per'     => 1,
    'time_unit'     => 24,
    'group_verify'     => "yes",
    'uid'     => 1,
  );
  db_insert('powell_res_rules')
    ->fields($fields)
    ->execute();

  // Add another entry.
  $fields = array(
    'user_group'    => 'UCLA Staff',
    'cls_lim' => 240,
    'gsr_lim'     => 240,
    'pod_lim'     => 240,
    'cls_adv' => 168,
    'gsr_adv'     => 168,
    'pod_adv'     => 168,
    'multi_res'     => "no",
    'time_per'     => 3,
    'time_unit'     => 168,
    'group_verify'     => "yes",
    'uid'     => 2,
  );
  db_insert('powell_res_rules')
    ->fields($fields)
    ->execute();

}

/**
 * Implements hook_uninstall().
 *
 * As in hook_install, there is no need to uninstall schema, Drupal will do it
